<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/recycler_item">

    <ImageView
        style="@style/grid_icon"
        android:layout_row="0"
        app:srcCompat="@drawable/ic_person" />

    <TextView
        android:id="@+id/person_label"
        style="@style/grid_icon_label"
        android:text="@string/placeholder_persons" />

    <ImageView
        style="@style/grid_icon"
        android:layout_row="1"
        app:srcCompat="@drawable/ic_calendar" />

    <TextView
        android:id="@+id/date_label"
        style="@style/grid_icon_label"
        android:text="@string/placeholder_date" />

    <ImageView
        android:id="@+id/transport_icon"
        style="@style/grid_icon"
        android:layout_row="2"
        app:srcCompat="@drawable/ic_transport_other" />

    <TextView
        android:id="@+id/transport_label"
        style="@style/grid_icon_label"
        android:text="@string/placeholder_transport" />

    <ImageView
        style="@style/grid_icon"
        android:layout_row="3"
        app:srcCompat="@drawable/ic_dinning" />

    <TextView
        android:id="@+id/meals_label"
        style="@style/grid_icon_label"
        android:text="@string/placeholder_meals" />

</merge>